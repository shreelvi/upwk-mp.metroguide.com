<div class="modal fade" data-bind="showModal: showPageCreateModal" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" data-bind="click: closeNewPageModal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add New Page</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="pageName">Page Name</label>
                    <input type="text" id="pageName" placeholder="Page Name" class="form-control" data-bind="value: newPageName"/>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: closeNewPageModal">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: saveNewPage">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->